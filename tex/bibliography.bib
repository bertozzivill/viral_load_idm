@article{fraser_variation_2007,
	title = {Variation in {HIV}-1 set-point viral load: {Epidemiological} analysis and an evolutionary hypothesis},
	volume = {104},
	issn = {0027-8424},
	shorttitle = {Variation in {HIV}-1 set-point viral load},
