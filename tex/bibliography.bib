	author = {Veugelers, Paul J. and Cornelisse, Peter G. A. and Craib, Kevin J. P. and Marion, Stephen A. and Hogg, Robert S. and Strathdee, Steffanie A. and Montaner, Julio S. G. and O'Shaughnessy, Michael V. and Schechter, Martin T.},
