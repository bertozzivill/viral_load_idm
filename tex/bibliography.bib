	number = {9},
	journal = {Clinical Infectious Diseases: An Official Publication of the Infectious Diseases Society of America},
	author = {Lavreys, Ludo and Baeten, Jared M. and Chohan, Varsha and McClelland, R. Scott and Hassan, Wisal M. and Richardson, Barbra A. and Mandaliya, Kishorchandra and Ndinya-Achola, Jeckoniah O. and Overbaugh, Julie},
	month = may,
	year = {2006},
	keywords = {Adult, Female, HIV Infections, Humans, Kenya, Risk Factors, Viral Load},
	pages = {1333--1339},
	annote = {survival by viral load}
}

