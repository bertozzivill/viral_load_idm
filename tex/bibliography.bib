	number = {2},
	journal = {Journal of Acquired Immune Deficiency Syndromes (1999)},
	author = {Chirouze, Catherine and Journot, Valérie and Le Moing, Vincent and Raffi, François and Piroth, Lionel and Reigadas, Sandrine and Cassuto, Jill-Patrice and Chêne, Geneviève and Leport, Catherine and Hoen, Bruno and {ANRS CO 08 Aproco-Copilote Study Group}},
