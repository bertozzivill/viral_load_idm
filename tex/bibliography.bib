	pmcid = {PMC3641845},
	keywords = {CD4 Lymphocyte Count, Female, HIV-1, HIV Infections, Humans, Kenya, Longitudinal Studies, Models, Statistical, Sex Workers, Survival Analysis, Viral Load},
