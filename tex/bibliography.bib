	month = apr,
	year = {2000},
	keywords = {acquired immunodeficiency syndrome, Adolescent, Adult, Aged, Age Factors, Anti-HIV Agents, Australia, Child, Child, Preschool, Cohort Studies, Disease Progression, Europe, Female, HIV-1, HIV Seropositivity, Humans, Incidence, Male, Middle Aged, North America, Risk Factors, Sarcoma, Kaposi, Survival Analysis, Time Factors},
